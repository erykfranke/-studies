@using Czytamy.pl.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

    <div id="form_box">
        <h1>Witaj ponownie</h1>
        <h2>Jesteś tutaj nowy? <span class="link">@Html.ActionLink("Zarejestruj się", "Register")</span></h2>
        <div style="padding-top: 20px; font-size: 17px">
            lub
        </div>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "summary_error" })

            <div class="form_verse">
                @Html.LabelFor(m => m.UserName)<span class="form_requared">*</span>
                <div>
                    @Html.TextBoxFor(m => m.UserName, new {placeholder = "Wpisz e-mail", @class = "form_imput" })
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="form_verse">
                @Html.LabelFor(m => m.Password)<span class="form_requared">*</span>
                <div>
                    @Html.PasswordFor(m => m.Password, new {placeholder = "Wpisz haslo", @class = "form_imput" })
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

             <!--
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
             -->

            <div style="margin-top: 40px">
                <input type="submit" value="Zaloguj się" id="submit" />
            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}