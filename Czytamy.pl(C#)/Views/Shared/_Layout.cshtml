<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/favicon.ico">
    <title>@ViewBag.Title</title>

    <link href="~/Content/fontello/css/cancel.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/book_details.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/form.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/list.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/details.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/user.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <header>
        <div id="head">
            <div id="header_logo">
                <i class="demo-icon icon-book-1"></i>@Html.ActionLink("Czytamy.pl", "Index", "Home")
            </div>
            <div id="header_user">
                @Html.Partial("_LoginPartial")
            </div>
            <div class="clear"></div>
        </div>
        <div id="nav_bar">
            <ul>
                <li>@Html.ActionLink("KSIĄŻKI", "Index", "Books", new { page = "1" }, null)</li>
                <li>@Html.ActionLink("AUTORZY", "Index", "Authors")</li>
                <li>@Html.ActionLink("WYDAWNICTWA", "Index", "Publishers")</li>
                <li>@Html.ActionLink("TAGI", "Index", "Tags")</li>
            </ul>
            <div class="clear"></div>
        </div>
    </header>

    <div id="container">
        @RenderBody()
    </div>

    @*<footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>*@

    @RenderSection("scripts", required: false)

</body>
</html>