@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <div id="UserPanel">
        @Html.ActionLink("Witaj " + User.Identity.GetUserName(), "Details", "ApplicationUsers",new {nick = User.Identity.GetUserName()}, htmlAttributes: new { title = "Manage" , style = "margin: 0 7px"})
        |
        <a href="javascript:document.getElementById('logoutForm').submit()" style = "margin: 0 7px">Wyloguj się</a>
    </div>
    }
}
else
{
    <div id="UserPanel">
        @Html.ActionLink("Zarejestruj się", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", style = "margin: 0 7px" })
         | 
        @Html.ActionLink("Zaloguj się", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "margin: 0 7px" })
    </div>
}
