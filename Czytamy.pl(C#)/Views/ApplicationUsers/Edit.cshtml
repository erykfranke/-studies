@model Czytamy.pl.Models.ApplicationUser

    <div id="form_box">
        <h1>Edycja danych</h1>
        @using (Html.BeginForm("Edit", "ApplicationUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.PhotoPath, new { value = Model.PhotoPath})

            <div class="form_verse">
                @Html.LabelFor(model => model.UserName)<span class="form_requared">*</span>
                <div>
                    @Html.EditorFor(model => model.UserName,
                        new { htmlAttributes = new { placeholder = "Wpisz nick", @class = "form_imput" } })
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <div class="form_verse">
                @Html.LabelFor(model => model.Place)<span class="form_requared">*</span>
                <div>
                    @Html.EditorFor(model => model.Place,
                        new { htmlAttributes = new { placeholder = "Wpisz swoją miejscowość", @class = "form_imput" } })
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(model => model.Place)
                </div>
            </div>

            <div class="form_verse">
                @Html.LabelFor(model => model.Gender)<span class="form_requared">*</span>
                <div>
                    @Html.DropDownListFor(model => model.Gender,
                        new SelectList(new List<string>{
                            "Kobieta",
                            "Mężczyżna",
                        }), new { @class = "form_select" }
                    )
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(model => model.Gender)
                </div>
            </div>

            <div class="form_verse">
                @Html.LabelFor(model => model.Description)
                <div>
                    @Html.TextAreaFor(model => model.Description,
                        new { placeholder = "Opis autora", @class = "form_imput_text-area" })
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form_verse">
                @Html.LabelFor(model => model.ImageFile)
                <div>
                    @Html.TextBoxFor(m => m.ImageFile, new { type = "file", accept = ".jpg", @class = "form_imput" })
                </div>
                <div class="form_error">
                    @Html.ValidationMessageFor(model => model.ImageFile)
                </div>
            </div>

            <div style="margin-top: 40px">
                <input type="submit" value="Edit" id="submit" />
            </div>
        }
    </div>
